<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.agrisys.PigDataController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <!-- Input Field -->
    <TextField fx:id="pigNumberField" promptText="Enter Pig Number" />

    <!-- Fetch Button -->
    <Button text="Get Pig Data" onAction="#handleFetchPigData" />

    <!-- Data Display Area -->
    <TextArea fx:id="pigDataArea" editable="false" prefHeight="200" prefWidth="300" />
</VBox>
